{
  "experiment_name": "phong_material_light_v1",
  "description": "Train MaterialHead and LightHead for Phong rendering",

  "device": "cuda",
  "use_amp": false,
  "max_epochs": 100,
  "save_freq": 10,
  "print_freq": 10,
  "viz_interval": 500,

  "pretrained_checkpoint": "facebook/VGGT-1B",

  "freeze_patterns": [
    "patch_embed",
    "aggregator",
    "camera_head",
    "point_head",
    "depth_head"
  ],

  "two_stage_training": {
    "enabled": true,
    "unfreeze_depth_at_step": 5000,
    "depth_lr_ratio": 0.1
  },

  "renderer": {
    "ambient_strength": 0.3,
    "use_learnable_light": true
  },

  "loss": {
    "weight": 1.0,
    "photometric_type": "l1",
    "smoothness_weight": 0.01,
    "energy_weight": 0.01,
    "normal_consistency_weight": 0.1,
    "depth_supervision_weight": 0.5
  },

  "optimizer": {
    "lr": 1e-4,
    "weight_decay": 0.01,
    "betas": [0.9, 0.999],
    "scheduler": {
      "type": "cosine",
      "min_lr": 1e-6
    }
  },

  "max_grad_norm": 1.0,

  "monitor": {
    "use_tensorboard": true,
    "save_interval": 100,
    "viz_interval": 500
  },

  "data": {
    "data_dir": null,
    "depth_dir": null,
    "scene_ids": null,
    "split": "train",
    "batch_size": 2,
    "num_workers": 4,
    "img_size": 518,
    "num_views": 4
  }
}
